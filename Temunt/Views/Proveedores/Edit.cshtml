@model Temunt.Models.proveedores

@{
    ViewData["Title"] = "Editar Proveedor";
}

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true">
    <link rel="stylesheet" href="~/css/proveedores.css" asp-append-version="true">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
</head>
<body>
    <div class="proveedores-container">
        <div class="proveedores-header-top">
            <div class="search-container">
                <input type="text"
                       placeholder="Buscar..."
                       class="search-input" />
                <i class="fas fa-search search-icon"></i>
            </div>

            <button class="notification-btn">
                <i class="far fa-bell"></i>
            </button>
        </div>
        <div class="proveedores-header-bottom">
            <h1>Editar Proveedor</h1>
        </div>
        <div class="form-wrapper">
            <div class="form-card">
                <h2 class="form-title">Editar Proveedor</h2>

                <form asp-action="Edit">
                    <div class="form-group">
                        <label asp-for="nombre" class="form-label">Nombre</label>
                        <input asp-for="nombre" class="form-input" />
                    </div>

                    <div class="form-group">
                        <label asp-for="direccion" class="form-label">Dirección</label>
                        <input asp-for="direccion" class="form-input" />
                    </div>

                    <div class="form-group">
                        <label asp-for="telefono" class="form-label">Teléfono</label>
                        <input asp-for="telefono" class="form-input" />
                    </div>

                    <div class="form-group">
                        <label asp-for="email" class="form-label">Email</label>
                        <input asp-for="email" class="form-input" type="email" />
                    </div>

                    <div class="form-actions">
                        <button type="submit" class="btn-submit">Editar</button>
                    </div>
                </form>
            </div>
            <div class="form-cancel">
                <a asp-action="Index" class="btn-cancel">Cancelar</a>
            </div>
        </div>
    </div>
</body>
</html>
