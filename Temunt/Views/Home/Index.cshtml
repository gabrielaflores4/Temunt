@{
    ViewData["Title"] = "Iniciar Sesión";
    Layout = null;
}

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>@ViewData["Login"] - Temunt</title>
    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=Montserrat:wght@400;500;600;700&display=swap" rel="stylesheet">
    <link href="index.css" rel="stylesheet">
    <style>
        body {
            background-color: #121212;
            color: #e0e0e0;
            font-family: 'Montserrat', sans-serif;
        }

        .form-control {
            background-color: #363636;
            border: none;
            color: #e0e0e0;
        }

            .form-control:focus {
                background-color: #1f1f1f;
                color: #fff;
                box-shadow: 0 0 0 0.25rem rgba(75, 102, 138, 0.5);
            }

        .form-label {
            color: #ffffff;
        }

        .btn-custom {
            background-color: #070d2f;
            color: white;
        }

            .btn-custom:hover {
                background-color: #3a526f;
                color: black;
            }
    </style>
</head>
<body>
    <div class="container d-flex justify-content-center align-items-center min-vh-100">
        <div class="card p-4 shadow" style="max-width: 400px; width: 100%; background-color: #1e1e1e;">

            <div class="text-center mb-3">
                <img src="~/img/logoTemunt.png" alt="Logo Temunt" style="max-width: 120px;">
            </div>

            <h3 class="text-center mb-4 text-light">Iniciar Sesión</h3>
            <!-- Cambiar action a la acción LoginUsuario del HomeController -->
            <form action="@Url.Action("Index", "Home")" method="POST">
                <div class="mb-3">
                    <label for="correo" class="form-label">Correo electrónico</label>
                    <input type="email" class="form-control" id="email" name="email" required>
                </div>
                <div class="mb-3">
                    <label for="" class="form-label">Contraseña</label>
                    <input type="password" class="form-control" id="password" name="contra" required>
                </div>
                <div class="d-grid mb-3">
                    <button type="submit" class="btn btn-custom">Entrar</button>

            </form>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>