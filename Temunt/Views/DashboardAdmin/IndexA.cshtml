<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Dashboard - Temun’t</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <style>
        body {
            background-color: #1c1c1c;
        }

        .sidebar {
            background-color: #d6d3e3;
            height: 100vh;
            padding: 20px;
        }

            .sidebar a {
                display: flex;
                align-items: center;
                gap: 8px;
                margin: 8px 0;
                color: #000;
                text-decoration: none;
                font-weight: 500;
                padding: 8px;
                border-radius: 8px;
            }

                .sidebar a.active {
                    background: #4b668a;
                    color: #fff;
                }

        .card-custom {
            background: #cfcfe6;
            border-radius: 12px;
            padding: 20px;
            min-height: 120px;
            display: flex;
            flex-direction: column;
            justify-content: space-between;
        }

            .card-custom i {
                font-size: 2rem;
                margin-bottom: 10px;
            }

        .metric {
            font-size: 1.5rem;
            font-weight: bold;
            text-align: right;
        }

        .chart-container {
            max-width: 700px;
            margin: 0 auto;
        }
    </style>
</head>
<body>
    <div class="container-fluid">
        <div class="row">

            <!-- Content -->
            <div class="col-10 p-4 bg-white">
                <div class="row g-3">
                    <div class="col-md-6 col-lg-3">
                        <div class="card-custom">
                            <i class="bi bi-laptop"></i>
                            <div>
                                <p class="mb-1">Laptops en Inventario</p>
                                <div class="metric">243</div>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-6 col-lg-3">
                        <div class="card-custom">
                            <i class="bi bi-cart"></i>
                            <div>
                                <p class="mb-1">Pedidos en Proceso</p>
                                <div class="metric">13</div>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-6 col-lg-3">
                        <div class="card-custom">
                            <i class="bi bi-cash-stack"></i>
                            <div>
                                <p class="mb-1">Monto de Ventas</p>
                                <div class="metric">$0</div>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-6 col-lg-3">
                        <div class="card-custom">
                            <i class="bi bi-graph-up-arrow"></i>
                            <div>
                                <p class="mb-1">Ventas del Mes</p>
                                <div class="metric">50</div>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Gráfico -->
                <div class="chart-container mt-4">
                    <canvas id="salesChart" height="200"></canvas>
                </div>
            </div>
        </div>
    </div>

    <script>
        const ctx = document.getElementById('salesChart');
        new Chart(ctx, {
          type: 'bar',
          data: {
            labels: ['Dell', 'HP', 'Lenovo', 'Acer', 'Apple'],
            datasets: [
              { label: '2024', data: [25, 60, 55, 15, 40], backgroundColor: '#4b668a' },
              { label: '2025', data: [15, 85, 60, 45, 50], backgroundColor: '#ff6600' }
            ]
          },
          options: {
            responsive: true,
            maintainAspectRatio: false,
            plugins: { legend: { position: 'top' } },
            scales: { y: { beginAtZero: true, max: 100 } }
          }
        });
    </script>
</body>
</html>
