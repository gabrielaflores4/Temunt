@model Temunt.Models.producto

@{
    ViewData["Title"] = "Crear Producto";
    Layout = "_Layout";
}

<div class="container-fluid p-4" style="background-color: #f8f9fc;">
    <div class="container-fluid">
        <div class="d-flex justify-content-between align-items-center mb-4">
            <h2 class="mb-0 fw-bold text-dark">Crear Producto</h2>
        </div>

        <form asp-action="CrearProductos" asp-controller="Inventario" method="post">
            <div class="row">
                <div class="col-md-12 mb-3">
                    <label asp-for="nombre" class="form-label fw-semibold"></label>
                    <input asp-for="nombre" class="form-control" placeholder="Nombre del producto" />
                </div>
            </div>

            <div class="row">
                <div class="col-md-6 mb-3">
                    <label asp-for="id_cat" class="form-label fw-semibold">Categoría</label>
                    <select asp-for="id_cat" class="form-select" asp-items="ViewBag.Categorias">
                        <option value="">Seleccionar categoría...</option>
                    </select>
                </div>
                <div class="col-md-6 mb-3">
                    <label asp-for="id_prov" class="form-label fw-semibold">Proveedor</label>
                    <select asp-for="id_prov" class="form-select" asp-items="ViewBag.Proveedores">
                        <option value="">Seleccionar proveedor...</option>
                    </select>
                </div>
            </div>

            <div class="row">
                <div class="col-md-12 mb-3">
                    <label asp-for="descripcion" class="form-label fw-semibold"></label>
                    <textarea asp-for="descripcion" class="form-control" rows="3" placeholder="Descripción del producto"></textarea>
                </div>
            </div>

            <div class="row">
                <div class="col-md-6 mb-3">
                    <label asp-for="precio" class="form-label fw-semibold"></label>
                    <input asp-for="precio" class="form-control" type="number" step="0.01" placeholder="Precio" />
                </div>
                <div class="col-md-6 mb-3">
                    <label asp-for="stock" class="form-label fw-semibold"></label>
                    <input asp-for="stock" class="form-control" type="number" placeholder="Cantidad en stock" />
                </div>
            </div>

            <div class="d-flex justify-content-between mt-4">
                <a asp-action="Productos" asp-controller="Inventario" class="btn" style="background-color:#B91C1C; color:white;">
                    <i class="bi bi-x-circle"></i> Cancelar
                </a>
                <button type="submit" class="btn" style="background-color:#453c79; color:white;">
                    <i class="bi bi-check-circle"></i> Crear
                </button>
            </div>
        </form>
    </div>
</div>
