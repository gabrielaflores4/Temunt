@model IEnumerable<Temunt.Models.producto>

@{
    ViewData["Title"] = "Productos";
    Layout = "_Layout";
}

    <div class="container mt-5">
        <div class="d-flex justify-content-between align-items-center mb-4">
            <h2 class="fw-bold">Productos</h2>

            <div class="d-flex align-items-center">
                <form class="d-flex me-3">
                    <input type="text" placeholder="Buscar..." class="form-control me-2" />
                    <button type="button" class="btn btn-outline-secondary">
                        <i class="bi bi-bell"></i>
                        <span class="badge bg-danger rounded-circle">3</span>
                    </button>
                </form>

                <a asp-action="CrearProductos" asp-controller="Inventario" class="btn btn-primary">
                    <i class="bi bi-plus-circle"></i> Añadir Producto
                </a>
            </div>
        </div>

        <div class="table-responsive shadow-sm rounded">
            <table class="table table-striped table-hover">
                <thead class="table-dark">
                    <tr>
                        <th>Código</th>
                        <th>Nombre</th>
                        <th>Categoría</th>
                        <th>Proveedor</th>
                        <th>Descripción</th>
                        <th>Precio</th>
                        <th>Stock</th>
                        <th class="text-center">Acciones</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.id_prod</td>
                            <td>@item.nombre</td>
                            <td>@item.id_cat</td>
                            <td>@item.id_prov</td>
                            <td>@item.descripcion</td>
                            <td>$@item.precio</td>
                            <td>@item.stock</td>
                            <td class="text-center">
                                <a asp-action="EditarProductos" asp-controller="Inventario" asp-route-id="@item.id_prod"
                                   class="btn btn-sm btn-outline-primary me-2">
                                    <i class="bi bi-pencil-square"></i>
                                </a>
                                <a asp-action="EliminarProducto" asp-controller="Inventario" asp-route-id="@item.id_prod"
                                   class="btn btn-sm btn-outline-danger">
                                    <i class="bi bi-trash"></i>
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
