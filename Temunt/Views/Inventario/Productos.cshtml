@model IEnumerable<Temunt.Models.producto>

@{
    ViewData["Title"] = "Productos";
    Layout = "_Layout";
}

<div class="container-fluid p-4" style="background-color: #f8f9fc;">
    <div class="row">
        <div class="col-12">

            <div class="d-flex justify-content-between align-items-center mb-4">
                <h2 class="mb-0 fw-bold text-dark">Productos</h2>
                <a href="@Url.Action("CrearProductos", "Inventario")" class="btn btn-crear">
                    CREAR PRODUCTO
                </a>
            </div>

            @if (TempData["SuccessMessage"] != null)
            {
                <div class="alert alert-success alert-dismissible fade show" role="alert">
                    @TempData["SuccessMessage"]
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
            }

            <!-- Tabla de productos -->
            <div class="card-body p-0">
                <div class="table-responsive">
                    <table class="table table-hover mb-0">
                        <thead style="background-color: #f7f9fc;">
                            <tr>
                                <th scope="col" class="text-muted fw-normal py-3 px-4 border-0">Código</th>
                                <th scope="col" class="text-muted fw-normal py-3 px-4 border-0">Nombre</th>
                                <th scope="col" class="text-muted fw-normal py-3 px-4 border-0">Categoría</th>
                                <th scope="col" class="text-muted fw-normal py-3 px-4 border-0">Proveedor</th>
                                <th scope="col" class="text-muted fw-normal py-3 px-4 border-0">Descripción</th>
                                <th scope="col" class="text-muted fw-normal py-3 px-4 border-0">Precio</th>
                                <th scope="col" class="text-muted fw-normal py-3 px-4 border-0">Stock</th>
                                <th scope="col" class="text-muted fw-normal py-3 px-4 border-0 text-center">Acciones</th>
                            </tr>
                        </thead>
                        <tbody>
                            @if (Model != null && Model.Any())
                            {
                                @foreach (var item in Model)
                                {
                                    <tr style="border-bottom: 1px solid #e9ecef;">
                                        <td class="px-4 py-3 fw-medium">@item.id_prod.ToString("D4")</td>
                                        <td class="px-4 py-3 fw-medium text-dark">@item.nombre</td>
                                        <td class="px-4 py-3 text-muted">@item.id_cat</td>
                                        <td class="px-4 py-3 text-muted">@item.id_prov</td>
                                        <td class="px-4 py-3 text-muted">@item.descripcion</td>
                                        <td class="px-4 py-3 fw-medium text-dark">@item.precio.ToString("C")</td>
                                        <td class="px-4 py-3 fw-medium">@item.stock</td>
                                        <td class="px-4 py-3 text-center">
                                            <a href="@Url.Action("EditarProductos", "Inventario", new { id = item.id_prod })"
                                               class="btn btn-detalles me-2">
                                                Editar
                                            </a>
                                            <a href="@Url.Action("EliminarProducto", "Inventario", new { id = item.id_prod })"
                                               class="btn btn-cancelar">
                                                Eliminar
                                            </a>
                                        </td>
                                    </tr>
                                }
                            }
                            else
                            {
                                <tr>
                                    <td colspan="8" class="text-center py-5 text-muted">
                                        <i class="fas fa-box-open fa-2x mb-3"></i>
                                        <div>No hay productos registrados</div>
                                        <a href="@Url.Action("CrearProductos", "Inventario")" class="btn btn-crear mt-3">
                                            Crear primer producto
                                        </a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
